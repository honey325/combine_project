      function keypress(event) {
        if (event.key == 'y') {
          document.getElementById("keypre").innerHTML = "Hahahaa you'r dumb ><";
        }
      }
      function keydown() {
        if (event.key == 'g') {
          document.getElementById("keydwn").style.backgroundColor = "rgb(100, 143, 80)";
        }

        else if (event.key == 'b') {
          document.getElementById("keydwn").style.backgroundColor = "rgb(86, 110, 241)";
        }
      }
      function keyup() {
        document.getElementById("keydwn").style.backgroundColor = "white";
      }
      function copy() {
        document.getElementById("copied").innerHTML = "you just copied text";
      }
      function cut() {

        document.getElementById("cutted").innerHTML = " you cannot erase it";
      }
      function paste() {
        document.getElementById("pasted").innerHTML = "don't cheat!!!!";
      }
      function fun() {

        document.getElementById("blur").innerHTML = "you'r leaving the field";
      }
      function focused() {
        document.getElementById('focused').innerHTML = 'on focus called'
      }
      function newele() {
        let cr_ele = document.createElement("p")
        let node = document.createTextNode("hey, Im new to this");
        document.getElementById("newelement").appendChild(cr_ele).appendChild(node);
      }
      function addevent() {
        const cr_ele = document.createElement("p")
        let node = document.createTextNode("you may click");
        document.getElementById("addevent").appendChild(cr_ele).appendChild(node);
        cr_ele.setAttribute("id", "new");
        cr_ele.addEventListener('click', function () {
          cr_ele.innerHTML = "you clicked";
        })

      }
      function byattr() {
        const para = document.createElement("p")
        let node = document.createTextNode("you may click");
        document.getElementById("byattr").appendChild(para).appendChild(node);
        para.setAttribute("id", "para");
        para.setAttribute("onclick", "alert('thank you')")

      }

    </script>
