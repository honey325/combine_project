      function mousedown() {
        document.getElementById("mousedown").innerHTML = "release me!!";
      }
      function mouseup() {
        document.getElementById("mousedown").innerHTML = "try to click me.......";
      }
      function mouseenter() {
        let x = document.getElementById("mouseenter-leave");
        x.style.backgroundColor = "rgb(122, 154, 182)";
      }
      function mouseleave() {
        document.getElementById("mouseenter-leave").style.backgroundColor = 'rgb(150, 200, 189)';
      }
      function mousemove() {
        document.getElementById("mousemove").innerHTML = "i can see you'r spying on me";
      }
      function mouseover() {

        document.getElementById("mouseover").style.backgroundColor = "rgba(255, 79, 79, 0.74)"
        alert("this is prohibited area!!!!");
