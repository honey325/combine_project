    <style>
        .end {
            justify-content: center;
        }

        #score_end {
            text-align: center;
            justify-content: center;
            font-size: 25px;
        }
        #pause{
            align-items: center;
            justify-content: center;
            padding: 12px;
            background-color: rgb(232, 154, 6);
            
            color: white;
            font-weight: bold;
            width: 8rem;
            border: 1px solid black;
            border-radius: 2%;
            cursor: pointer;
            text-align: center;
            margin-left: 28%;
        }
        #playagain {

            align-items: center;
            justify-content: center;
            padding: 12px;
            background-color: rgb(232, 154, 6);
            ;
